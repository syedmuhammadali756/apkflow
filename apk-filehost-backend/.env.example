# Environment Variables - Backend
# Copy this to .env and fill in your values

# MongoDB Connection
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/apk-filehost?retryWrites=true&w=majority

# JWT Secret Key (change this to a random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-to-something-random

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your-cloudflare-account-id
R2_ACCESS_KEY_ID=your-r2-access-key-id
R2_SECRET_ACCESS_KEY=your-r2-secret-access-key
R2_BUCKET_NAME=apk-filehost
R2_ENDPOINT=https://your-account-id.r2.cloudflarestorage.com
R2_PUBLIC_URL=https://your-custom-domain.com

# Application Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# File Upload Limits
MAX_FILE_SIZE_MB=100
MAX_UPLOAD_PER_HOUR=10
MAX_DOWNLOAD_PER_HOUR=100
USER_STORAGE_QUOTA_GB=5
